---
export interface Props {
  title: string;
  description: string;
  index: number;
  icon: string;
}

const { title, description, index, icon } = Astro.props;
---

<div class="relative group">
  
  <div class="relative z-10 p-6 h-full flex flex-col">
    <!-- Icon -->
    <div class="flex items-center mb-4">
      <!-- Monochrome icon -->
      <div class="flex-shrink-0 w-12 h-12 bg-primary/10 flex items-center justify-center text-primary transform transition-all duration-300 group-hover:bg-primary group-hover:text-white" set:html={icon}>
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1">
      <!-- Header accent bar (hidden by default, shown on hover) -->
      <div class="absolute -left-4 top-6 bottom-6 w-1 bg-primary opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
      
      <h3 class="font-bold text-secondary text-xl mb-3 transition-all duration-300 group-hover:font-extrabold leading-tight">
        {title}
      </h3>
      
      <p class="text-secondary/80 leading-relaxed text-base">
        {description}
      </p>
    </div>
  </div>
</div>