---
import UserCheck from '@lucide/astro/icons/user-check';
import ListChecks from '@lucide/astro/icons/list-checks';
import Lightbulb from '@lucide/astro/icons/lightbulb';
import Activity from '@lucide/astro/icons/activity';
import Users from '@lucide/astro/icons/users';

export interface Props {
  title: string;
  description: string;
  index: number;
  icon: string;
}

const { title, description, icon } = Astro.props;

// Map icon names to icon components
const iconComponents = {
  'user-check': UserCheck,
  'list-checks': ListChecks,
  'lightbulb': Lightbulb,
  'activity': Activity,
  'users': Users,
};

const IconComponent = iconComponents[icon as keyof typeof iconComponents] || Users;
---

<div class="relative group">
  
  <div class="relative z-10 p-6 h-full flex flex-col">
    <!-- Icon -->
    <div class="flex items-center mb-4">
      <!-- Circular icon with gradient background similar to MarketingOverview -->
      <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-primary to-primary/80 flex items-center justify-center text-additional shadow-lg transform transition-all duration-300 group-hover:scale-110">
        <IconComponent size={28} />
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1">
      <!-- Header accent bar (hidden by default, shown on hover) -->
      <div class="absolute -left-4 top-6 bottom-6 w-1 bg-primary opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
      
      <h3 class="font-bold text-secondary text-xl mb-3 transition-all duration-300 group-hover:font-extrabold leading-tight">
        {title}
      </h3>
      
      <p class="text-secondary/80 leading-relaxed text-base">
        {description}
      </p>
    </div>
  </div>
</div>