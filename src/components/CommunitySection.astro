---
export interface Props {
  currentLang: 'pl' | 'en';
  heading?: {
    pl: string;
    en: string;
  };
  description?: {
    pl: string;
    en: string;
  };
  primaryButton?: {
    text: {
      pl: string;
      en: string;
    };
    href: string;
    external?: boolean;
  };
  secondaryButton?: {
    text: {
      pl: string;
      en: string;
    };
    href: {
      pl: string;
      en: string;
    };
    external?: boolean;
  };
}

const { 
  currentLang, 
  heading, 
  description, 
  primaryButton, 
  secondaryButton 
} = Astro.props;

const defaultContent = {
  pl: {
    heading: "Dołącz do Southeast Jiu-Jitsu",
    description: "Oferujemy zajęcia dla dzieci i dorosłych przez 6 dni w tygodniu o różnych porach dnia, aby każdy mógł znaleźć czas na trening.",
    cta: {
      primary: "Pierwszy darmowy trening",
      secondary: "Sprawdź harmonogram"
    }
  },
  en: {
    heading: "Join Southeast Jiu-Jitsu",
    description: "We offer classes for children and adults 6 days a week at different times of the day, so everyone can find time to train.",
    cta: {
      primary: "First free training",
      secondary: "Check schedule"
    }
  }
};

const currentContent = {
  heading: heading?.[currentLang] || defaultContent[currentLang].heading,
  description: description?.[currentLang] || defaultContent[currentLang].description,
  cta: {
    primary: primaryButton?.text[currentLang] || defaultContent[currentLang].cta.primary,
    secondary: secondaryButton?.text[currentLang] || defaultContent[currentLang].cta.secondary
  }
};
---

<section class="bg-secondary py-16 lg:py-24">
  <div class="max-w-4xl mx-auto px-4 lg:px-8 text-center">
    <!-- Section Heading -->
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-additional mb-6 leading-tight">
      {currentContent.heading}
    </h2>
    
    <!-- Description -->
    <p class="text-additional/90 text-lg leading-relaxed mb-10 max-w-2xl mx-auto">
      {currentContent.description}
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-2xl mx-auto">
      <a 
        href={primaryButton?.href || "https://southeastjiujitsu.wod.guru/rejestracja"}
        target={primaryButton?.external !== false ? "_blank" : undefined}
        rel={primaryButton?.external !== false ? "noopener noreferrer" : undefined}
        class="w-full sm:w-auto min-w-[240px] px-8 py-4 bg-primary text-secondary font-normal text-base uppercase tracking-wide hover:bg-primary/90 transition-all duration-200"
      >
        {currentContent.cta.primary}
      </a>
      
      <a 
        href={secondaryButton?.href[currentLang] || (currentLang === 'pl' ? '/harmonogram' : '/en/schedule')}
        target={secondaryButton?.external ? "_blank" : undefined}
        rel={secondaryButton?.external ? "noopener noreferrer" : undefined}
        class="w-full sm:w-auto min-w-[240px] px-8 py-4 bg-transparent border-2 border-additional text-additional font-normal text-base uppercase tracking-wide hover:bg-additional hover:text-secondary transition-all duration-200"
      >
        {currentContent.cta.secondary}
      </a>
    </div>

  </div>
</section>