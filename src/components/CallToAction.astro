---
interface Props {
  currentLang: 'pl' | 'en';
}

const { currentLang } = Astro.props;

const content = {
  pl: {
    heading: "Dołącz do nas!",
    description: "Poznaj nasze innowacyjne metody treningowe i trenuj Jiu-Jitsu, MMA i Kickboxing pod okiem trenerów z wieloletnim doświadczeniem!",
    freeTraining: "Pierwszy darmowy trening",
    buyMembership: "Kup karnet"
  },
  en: {
    heading: "Join us!",
    description: "Discover our innovative training methods and train Jiu-Jitsu, MMA and Kickboxing under experienced coaches!",
    freeTraining: "First free training",
    buyMembership: "Buy membership"
  }
};

const text = content[currentLang];
---

<div class="call-to-action-container">
  <div class="call-to-action-content">
    <h2 class="call-to-action-heading">
      {text.heading}
    </h2>
    
    <p class="call-to-action-description">
      {text.description}
    </p>
    
    <div class="call-to-action-buttons">
      <a 
        href="https://southeastjiujitsu.wod.guru/rejestracja"
        target="_blank"
        rel="noopener noreferrer"
        class="call-to-action-button call-to-action-button-primary"
      >
        {text.freeTraining}
      </a>
      
      <a 
        href="https://southeastjiujitsu.wod.guru/wizytowka"
        target="_blank"
        rel="noopener noreferrer"
        class="call-to-action-button call-to-action-button-secondary"
      >
        {text.buyMembership}
      </a>
    </div>
  </div>
</div>

<style>
  .call-to-action-container {
    width: 100%;
    max-width: 4xl;
    margin: 0 auto;
  }
  
  .call-to-action-content {
    text-align: center;
    padding: 0 1rem;
  }
  
  .call-to-action-heading {
    font-size: 2.5rem;
    font-weight: 300;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
    text-align: center;
    line-height: 1.2;
  }
  
  .call-to-action-description {
    font-size: 1.125rem;
    color: var(--color-secondary);
    line-height: 1.6;
    margin-bottom: 2rem;
    text-align: center;
    font-weight: 300;
    max-width: 2xl;
    margin-left: auto;
    margin-right: auto;
  }
  
  .call-to-action-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: lg;
    margin: 0 auto;
  }
  
  .call-to-action-button {
    width: 100%;
    padding: 1rem 2rem;
    text-align: center;
    font-size: 1rem;
    font-weight: normal;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.2s;
    border: none;
    text-decoration: none;
    display: block;
    border-radius: 0;
  }
  
  .call-to-action-button:focus {
    outline: none;
  }
  
  .call-to-action-button:hover {
    opacity: 0.9;
  }
  
  .call-to-action-button-primary {
    background-color: var(--color-primary);
    color: var(--color-secondary);
  }
  
  .call-to-action-button-primary:hover {
    background-color: rgba(188, 198, 217, 0.9);
  }
  
  .call-to-action-button-secondary {
    background-color: var(--color-secondary);
    color: var(--color-additional);
  }
  
  .call-to-action-button-secondary:hover {
    background-color: rgba(53, 53, 53, 0.9);
  }
  
  /* Responsive styles */
  @media (min-width: 640px) {
    .call-to-action-buttons {
      flex-direction: row;
      justify-content: center;
    }
    
    .call-to-action-button {
      width: auto;
      min-width: 200px;
    }
  }
  
  @media (min-width: 768px) {
    .call-to-action-heading {
      font-size: 3rem;
    }
    
    .call-to-action-description {
      font-size: 1.25rem;
    }
    
    .call-to-action-button {
      font-size: 1.125rem;
      padding: 1.25rem 2.5rem;
    }
  }
</style>