const currentContent = content[currentLang];
---

<section class="bg-white py-16 lg:py-24">
  <div class="max-w-7xl mx-auto px-4 lg:px-8">
    <!-- Section Heading -->
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-secondary mb-6 leading-tight">
        {currentContent.heading}
      </h2>
      
      <!-- Decorative line -->
      <div class="w-24 h-1 bg-primary mx-auto rounded-full"></div>
    </div>

    <!-- Features Grid -->
    <div class="grid gap-8 md:gap-10 lg:gap-12">
      <!-- First row: 2 features -->
      <div class="grid md:grid-cols-2 gap-8 md:gap-10 lg:gap-12">
        {currentContent.features.slice(0, 2).map((feature, index) => (
          <FeatureCard
            title={feature.title}
            description={feature.description}
            index={index}
            icon={feature.icon}
          />
        ))}
      </div>
      
      <!-- Second row: 1 feature (centered) -->
      <div class="grid justify-center">
        <div class="max-w-2xl">
          <FeatureCard
            title={currentContent.features[2].title}
            description={currentContent.features[2].description}
            index={2}
            icon={currentContent.features[2].icon}
          />
        </div>
      </div>
      
      <!-- Third row: 2 features -->
      <div class="grid md:grid-cols-2 gap-8 md:gap-10 lg:gap-12">
        {currentContent.features.slice(3, 5).map((feature, index) => (
          <FeatureCard
            title={feature.title}
            description={feature.description}
            index={index + 3}
            icon={feature.icon}
          />
        ))}
      </div>
    </div>
  </div>
</section>