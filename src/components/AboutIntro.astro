---
export interface Props {
  currentLang: 'pl' | 'en';
}

const { currentLang } = Astro.props;

const content = {
  pl: {
    heading: "Kim jesteśmy?",
    description: "Southeast Jiu-Jitsu to miejsce stworzone dla wszystkich pasjonatów sportów walki. Specjalizujemy się w No-Gi Jiu-Jitsu, MMA oraz Kickboxingu, oferujemy treningi dostosowane do różnych poziomów zaawansowania – zarówno dla początkujących, jak i bardziej zaawansowanych - każdy znajdzie coś dla siebie!",
    philosophy: "Naszym priorytetem jest bezpieczne i przyjazne środowisko treningowe, w którym każdy, niezależnie od płci, wieku czy doświadczenia, może rozwijać swoje umiejętności i stać się częścią naszej społeczności."
  },
  en: {
    heading: "Who are we?",
    description: "Southeast Jiu-Jitsu is a place created for all martial arts enthusiasts. We specialize in No-Gi Jiu-Jitsu, MMA, and Kickboxing, offering training adapted to different skill levels – both for beginners and more advanced practitioners - everyone will find something for themselves!",
    philosophy: "Our priority is a safe and friendly training environment where everyone, regardless of gender, age, or experience, can develop their skills and become part of our community."
  }
};

const currentContent = content[currentLang];
---

<section class="bg-additional py-16 lg:py-24">
  <div class="max-w-7xl mx-auto px-4 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Content Column -->
      <div class="order-2 lg:order-1">
        <!-- Section Heading -->
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-secondary mb-6 leading-tight">
          {currentContent.heading}
        </h2>
        
        <!-- Main Description -->
        <p class="text-secondary text-lg leading-relaxed mb-6">
          {currentContent.description}
        </p>
        
        <!-- Philosophy Statement -->
        <p class="text-secondary text-lg leading-relaxed p-6 bg-primary/10 rounded-lg border-l-4 border-primary">
          {currentContent.philosophy}
        </p>
      </div>

      <!-- Image Column -->
      <div class="order-1 lg:order-2 relative">
        <!-- Enhanced decorative geometric shapes - Background layer -->
        <div class="absolute inset-0 overflow-hidden">
          <!-- Large background circle -->
          <div class="absolute -top-20 -right-20 w-40 h-40 bg-primary/20 rounded-full animate-pulse"></div>
          <!-- Medium background circle -->
          <div class="absolute -bottom-12 -left-16 w-32 h-32 bg-secondary/15 rounded-full"></div>
          <!-- Background rectangles -->
          <div class="absolute bottom-10 right-0 w-24 h-6 bg-primary/25 transform rotate-12"></div>
          <div class="absolute top-20 left-12 w-16 h-20 bg-secondary/20 transform -rotate-45"></div>
          <!-- Background triangles -->
          <div class="absolute top-1/2 -right-8 w-12 h-12 bg-primary/15 transform -rotate-12 clip-path-triangle"></div>
        </div>
        
        <!-- Clean image container -->
        <div class="relative z-10 px-4">
          <img 
            src="/training-session.jpg" 
            alt="Southeast Jiu-Jitsu training session showing practitioners on the mat"
            class="w-full h-auto shadow-2xl rounded-lg"
            loading="lazy"
          />
        </div>

        <!-- Enhanced decorative geometric shapes - Foreground layer -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
          <!-- Prominent foreground shapes -->
          <div class="absolute -top-8 left-8 w-20 h-20 bg-primary/30 rounded-full z-20 animate-bounce" style="animation-duration: 3s;"></div>
          <div class="absolute top-1/4 -left-6 w-14 h-14 bg-secondary/40 transform -rotate-45 z-20"></div>
          <div class="absolute bottom-16 -right-4 w-16 h-4 bg-primary/35 transform -rotate-45 z-20"></div>
          <div class="absolute bottom-1/3 left-4 w-8 h-8 bg-secondary/50 rounded-full z-20"></div>
          <!-- Floating accent lines -->
          <div class="absolute top-12 right-1/3 w-20 h-1 bg-primary/40 transform rotate-12 z-20"></div>
          <div class="absolute bottom-20 left-1/4 w-16 h-1 bg-secondary/40 transform -rotate-12 z-20"></div>
          <!-- Small decorative dots -->
          <div class="absolute top-1/3 right-8 w-3 h-3 bg-primary/60 rounded-full z-20"></div>
          <div class="absolute bottom-1/4 right-1/4 w-2 h-2 bg-secondary/70 rounded-full z-20"></div>
          <div class="absolute top-2/3 left-12 w-4 h-4 bg-primary/50 transform -rotate-45 z-20"></div>
        </div>
      </div>
    </div>
  </div>
</section>