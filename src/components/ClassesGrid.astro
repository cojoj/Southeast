---
import type { ClassItem, Locale } from '../types';
import ClassCard from './ClassCard.astro';

export interface Props {
  classes: ClassItem[];
  locale: Locale;
}

const { classes, locale } = Astro.props;
const isPolish = locale === 'pl';

// Separate adult and kids classes for better organization
const adultClasses = classes.filter(c => c.level !== 'dzieci');
const kidsClasses = classes.filter(c => c.level === 'dzieci');
---

<div class="classes-grid-container">
  
  {/* Adult Classes Section */}
  {adultClasses.length > 0 && (
    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-se-ink mb-6 text-center">
        {isPolish ? 'Treningi dla doros≈Çych' : 'Adult Training'}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {adultClasses.map((item) => (
          <ClassCard item={item} locale={locale} />
        ))}
      </div>
    </div>
  )}
  
  {/* Kids Classes Section */}
  {kidsClasses.length > 0 && (
<div id="kids-training" style="scroll-margin-top: 123px;">
      <h2 class="text-2xl font-semibold text-se-ink mb-6 text-center">
        {isPolish ? 'Treningi dla dzieci' : 'Kids Training'}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {kidsClasses.map((item) => (
          <ClassCard item={item} locale={locale} />
        ))}
      </div>
    </div>
  )}
  
</div>