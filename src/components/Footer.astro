---
export interface Props {
  currentLang?: 'pl' | 'en';
}

const { currentLang = 'pl' } = Astro.props;

const isPolish = currentLang === 'pl';
---

<footer class="bg-secondary text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Contact Information -->
      <div class="space-y-4">
        <h3 class="text-lg font-bold text-primary uppercase">
          {isPolish ? "Kontakt" : "Contact"}
        </h3>
        <div class="space-y-3 text-sm">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-primary mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <p class="text-gray-300">ul. Saska 12F/6U</p>
              <p class="text-gray-300">30-720 Kraków, Polska</p>
            </div>
          </div>
          
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href="tel:+48502680950" class="text-gray-300 hover:text-primary transition-colors">
              +48 502 680 950
            </a>
          </div>
          
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href="mailto:southeast.jiujitsu@gmail.com" class="text-gray-300 hover:text-primary transition-colors">
              southeast.jiujitsu@gmail.com
            </a>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3 class="text-lg font-bold text-primary uppercase">
          {isPolish ? "Szybkie linki" : "Quick Links"}
        </h3>
        <nav class="space-y-2 text-sm">
          <a href={isPolish ? "/treningi" : "/en/training"} class="block text-gray-300 hover:text-primary transition-colors">
            {isPolish ? "Treningi" : "Training"}
          </a>
          <a href={isPolish ? "/harmonogram" : "/en/schedule"} class="block text-gray-300 hover:text-primary transition-colors">
            {isPolish ? "Harmonogram" : "Schedule"}
          </a>
          <a href={isPolish ? "/o-nas" : "/en/about"} class="block text-gray-300 hover:text-primary transition-colors">
            {isPolish ? "O nas" : "About Us"}
          </a>
          <a href={isPolish ? "/kontakt" : "/en/contact"} class="block text-gray-300 hover:text-primary transition-colors">
            {isPolish ? "Kontakt" : "Contact"}
          </a>
        </nav>
      </div>

      <!-- Social Media & Info -->
      <div class="space-y-4">
        <h3 class="text-lg font-bold text-primary uppercase">
          {isPolish ? "Śledź nas" : "Follow Us"}
        </h3>
        <div class="flex space-x-4">
          <a href="https://www.instagram.com/southeast.jiujitsu/" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-primary transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="https://www.facebook.com/southeast.jiujitsu" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-primary transition-colors">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        </div>
        
        <div class="text-sm text-gray-400">
          <p class="mb-2">Southeast Jiu-Jitsu</p>
          <p>{isPolish ? "Brazilian Jiu-Jitsu w Krakowie" : "Brazilian Jiu-Jitsu in Kraków"}</p>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-white/20 mt-8 pt-6 text-center">
      <p class="text-sm text-gray-400">
        Copyright © {new Date().getFullYear()} Southeast Jiu-Jitsu. {isPolish ? "Wszystkie prawa zastrzeżone." : "All rights reserved."}
      </p>
    </div>
