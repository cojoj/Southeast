---
export interface Props {
  name: string;
  role: string;
  bio: string;
  image: string;
  isFounder?: boolean;
}

const { name, role, bio, image, isFounder = false } = Astro.props;
---

<div class={`relative group ${isFounder ? 'md:col-span-2 lg:col-span-1' : ''}`}>
  <!-- Background accent for hover -->
  <div class="absolute -inset-2 bg-primary/5 rounded-xl opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
  
  <div class="relative z-10 p-6 h-full flex flex-col bg-white/50 rounded-lg shadow-sm hover:shadow-lg transition-all duration-300">
    <!-- Trainer Photo -->
    <div class="flex justify-center mb-6">
      <div class="relative">
        <img 
          src={image} 
          alt={`${name} - ${role}`}
          class={`${isFounder ? 'w-32 h-32 md:w-40 md:h-40' : 'w-24 h-24 md:w-28 md:h-28'} object-cover rounded-full shadow-lg ring-4 ring-primary/20 group-hover:ring-primary/40 transition-all duration-300`}
          loading="lazy"
        />
        
        <!-- Founder badge -->
        {isFounder && (
          <div class="absolute -top-2 -right-2 w-8 h-8 bg-secondary text-additional rounded-full flex items-center justify-center text-xs font-bold">
            â˜…
          </div>
        )}
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1 text-center">
      <!-- Name -->
      <h3 class={`font-bold text-secondary mb-2 leading-tight ${isFounder ? 'text-2xl md:text-3xl' : 'text-xl md:text-2xl'}`}>
        {name}
      </h3>
      
      <!-- Role/Title -->
      <p class={`text-primary font-semibold mb-4 ${isFounder ? 'text-lg md:text-xl' : 'text-base md:text-lg'}`}>
        {role}
      </p>
      
      <!-- Bio -->
      <p class="text-secondary/80 leading-relaxed text-sm md:text-base text-left">
        {bio}
      </p>
    </div>

    <!-- Decorative accent line -->
    <div class="absolute bottom-0 left-6 right-6 h-1 bg-gradient-to-r from-transparent via-primary/30 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
  </div>
</div>