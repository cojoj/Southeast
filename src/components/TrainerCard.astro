---
export interface Props {
  name: string;
  role: string;
  bio: string;
  image: string;
  isFounder?: boolean;
}

const { name, role, bio, image, isFounder = false } = Astro.props;
---

<div class={`relative group ${isFounder ? 'md:col-span-2 lg:col-span-1' : ''}`}>
  <!-- Background accent for hover -->
  <div class="absolute -inset-2 bg-primary/5 opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
  
  <div class="relative z-10 p-6 h-full flex flex-col bg-white/50 shadow-sm hover:shadow-lg transition-all duration-300">
    <!-- Trainer Photo -->
    <div class="flex justify-center mb-6">
      <div class="relative">
        <img 
          src={image} 
          alt={`${name} - ${role}`}
          class="w-24 h-24 md:w-28 md:h-28 object-cover rounded-full shadow-lg ring-4 ring-primary/20 group-hover:ring-primary/40 transition-all duration-300"
          loading="lazy"
        />
        
      </div>
    </div>

    <!-- Content -->
    <div class="flex-1 text-center">
      <!-- Name -->
      <h3 class="font-bold text-secondary mb-2 leading-tight text-xl md:text-2xl">
        {name}
      </h3>
      
      <!-- Role/Title -->
      <p class="text-primary font-semibold mb-4 text-base md:text-lg">
        {role}
      </p>
      
      <!-- Bio -->
      <p class="text-secondary/80 leading-relaxed text-sm md:text-base text-left">
        {bio}
      </p>
    </div>

    <!-- Decorative accent line -->
    <div class="absolute bottom-0 left-6 right-6 h-1 bg-gradient-to-r from-transparent via-primary/30 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
  </div>
</div>