---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import CallToAction from '../components/CallToAction.astro'
---

<html lang="pl">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Southeast Jiu-Jitsu</title>
		<meta name="description" content="Southeast Jiu-Jitsu - Brazylijskie Jiu-Jitsu w Krakowie. Treningi dla wszystkich poziomÃ³w zaawansowania." />
	</head>
	<body class="bg-additional">
		<Header currentLang="pl" />
		<main class="relative min-h-screen">
			<!-- Hero Section -->
			<section class="relative min-h-screen overflow-hidden">
				<!-- Background Image -->
				<div 
					class="absolute inset-0 bg-cover bg-center bg-no-repeat"
					style="background-image: url('/hero_grey.png');"
				></div>
				
				<!-- Logo with Smooth Blur Effect -->
				<div class="absolute inset-0 flex items-center justify-center">
					<!-- Smooth Blur Background using CSS Mask -->
					<div class="absolute inset-0 flex items-center justify-center">
						<div 
							class="w-[120vw] h-[120vh] backdrop-blur-xl"
							style="
								mask: radial-gradient(circle at center, 
									rgba(0,0,0,1) 0%, 
									rgba(0,0,0,0.95) 10%, 
									rgba(0,0,0,0.85) 20%, 
									rgba(0,0,0,0.7) 30%, 
									rgba(0,0,0,0.5) 40%, 
									rgba(0,0,0,0.3) 50%, 
									rgba(0,0,0,0.15) 60%, 
									rgba(0,0,0,0.05) 70%, 
									rgba(0,0,0,0.01) 80%, 
									transparent 90%
								);
								-webkit-mask: radial-gradient(circle at center, 
									rgba(0,0,0,1) 0%, 
									rgba(0,0,0,0.95) 10%, 
									rgba(0,0,0,0.85) 20%, 
									rgba(0,0,0,0.7) 30%, 
									rgba(0,0,0,0.5) 40%, 
									rgba(0,0,0,0.3) 50%, 
									rgba(0,0,0,0.15) 60%, 
									rgba(0,0,0,0.05) 70%, 
									rgba(0,0,0,0.01) 80%, 
									transparent 90%
								);
								background: radial-gradient(circle, rgba(188,198,217,0.1) 0%, transparent 60%);
							"
						></div>
					</div>
					
					<!-- Logo -->
					<div class="relative z-10 w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl 2xl:max-w-2xl px-4">
						<img 
							src="/logo_blue.svg" 
							alt="Southeast Jiu-Jitsu Logo" 
							class="w-full h-auto"
							style="filter: drop-shadow(0 4px 12px rgba(0,0,0,0.25)) drop-shadow(0 0 4px rgba(53,53,53,0.7)) drop-shadow(0 0 8px rgba(53,53,53,0.4)) drop-shadow(0 0 12px rgba(53,53,53,0.15));"
						/>
					</div>
				</div>
				
			</section>
			<!-- CTA Section -->
			<section class="bg-additional py-16 lg:py-24">
				<div class="container mx-auto px-4">
					<CallToAction currentLang="pl" />
				</div>
			</section>
		</main>
		<Footer currentLang="pl" />
	</body>
</html>
