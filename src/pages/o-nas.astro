---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Hero from '../components/Hero.astro'
import AboutIntro from '../components/AboutIntro.astro'
import FeaturesGrid from '../components/FeaturesGrid.astro'
import TrainerProfiles from '../components/TrainerProfiles.astro'
import CommunitySection from '../components/CommunitySection.astro'
---

<html lang="pl">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>O nas - Southeast Jiu-Jitsu | Kraków</title>
		<meta name="description" content="Poznaj Southeast Jiu-Jitsu w Krakowie - naszych trenerów, innowacyjne metody treningowe i społeczność pasjonatów sportów walki. Treningi dla wszystkich poziomów zaawansowania." />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://southeastjj.pl/o-nas" />
		<meta property="og:title" content="O nas - Southeast Jiu-Jitsu | Kraków" />
		<meta property="og:description" content="Poznaj Southeast Jiu-Jitsu w Krakowie - naszych trenerów, innowacyjne metody treningowe i społeczność pasjonatów sportów walki." />
		<meta property="og:image" content="https://southeastjj.pl/training-session.jpg" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://southeastjj.pl/o-nas" />
		<meta property="twitter:title" content="O nas - Southeast Jiu-Jitsu | Kraków" />
		<meta property="twitter:description" content="Poznaj Southeast Jiu-Jitsu w Krakowie - naszych trenerów, innowacyjne metody treningowe i społeczność pasjonatów sportów walki." />
		<meta property="twitter:image" content="https://southeastjj.pl/training-session.jpg" />
	</head>
	<body class="bg-additional">
		<Header currentLang="pl" currentUrl={Astro.url.pathname} />
		<main class="relative">
			<!-- Hero Section -->
			<Hero currentLang="pl" backgroundImage={`${import.meta.env.BASE_URL}team.png`} />
			
			<!-- Intro Section -->
			<AboutIntro currentLang="pl" />
			
			<!-- Features Grid Section -->
			<FeaturesGrid currentLang="pl" />
			
			<!-- Trainer Profiles Section -->
			<TrainerProfiles currentLang="pl" />
			
			<!-- Community and CTA Section -->
			<CommunitySection currentLang="pl" />
		</main>
		<Footer currentLang="pl" />
	</body>
</html>