---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import CallToAction from '../components/CallToAction.astro'
import Hero from '../components/Hero.astro'
import ClassesGrid from '../components/ClassesGrid.astro'
import InfoBlock from '../components/InfoBlock.astro'

// Import data
import classesData from '../data/classes.pl.json'
import infoData from '../data/info.pl.json'
import type { ClassesData, InfoData } from '../types'

const classes = (classesData as ClassesData).classes
const info = (infoData as InfoData).info
---

<html lang="pl">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Treningi - Southeast Jiu-Jitsu</title>
		<meta name="description" content="Poznaj naszą pełną ofertę treningów: Jiu-Jitsu, MMA, Kickboxing. Zajęcia dla wszystkich poziomów - od podstaw po zaawansowane. Zapisz się na darmowy trening próbny." />
		
		<!-- Open Graph -->
		<meta property="og:title" content="Treningi - Southeast Jiu-Jitsu" />
		<meta property="og:description" content="Poznaj naszą pełną ofertę treningów: Jiu-Jitsu, MMA, Kickboxing. Zajęcia dla wszystkich poziomów." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://southeastjj.pl/treningi" />
		
		<!-- Canonical -->
		<link rel="canonical" href="https://southeastjj.pl/treningi" />
		
		<!-- Alternate language -->
		<link rel="alternate" hreflang="en" href="https://southeastjj.pl/en/training" />
		<link rel="alternate" hreflang="pl" href="https://southeastjj.pl/treningi" />
	</head>
	<body class="bg-se">
		<Header currentLang="pl" />
		
		<main class="relative min-h-screen">
			<!-- Hero Section -->
			<Hero 
				currentLang="pl" 
				title={{
					pl: "TRENINGI",
					en: "TRAINING"
				}}
				subtitle={{
					pl: "Znajdź swój styl walki w naszej różnorodnej ofercie zajęć",
					en: "Find your fighting style in our diverse class offerings"
				}}
			/>
			
			<!-- Classes Grid Section -->
			<section class="py-16 md:py-20">
				<div class="container mx-auto px-4">
					<ClassesGrid classes={classes} locale="pl" />
				</div>
			</section>
			
			<!-- Info Sections -->
			{info.map((block) => (
				<InfoBlock block={block} locale="pl" />
			))}
			
			<!-- Call to Action -->
			<section class="py-16 md:py-20">
				<CallToAction currentLang="pl" />
			</section>
		</main>
		
		<Footer currentLang="pl" />
	</body>
</html>