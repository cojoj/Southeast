---
import '../../styles/global.css'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import CallToAction from '../../components/CallToAction.astro'
import Hero from '../../components/Hero.astro'
import ClassesGrid from '../../components/ClassesGrid.astro'
import CLASection from '../../components/CLASection.astro'

// Import data
import classesData from '../../data/classes.en.json'
import type { ClassesData } from '../../types'

const classes = (classesData as ClassesData).classes
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Training - Southeast Jiu-Jitsu</title>
		<meta name="description" content="Discover our complete training offering: Jiu-Jitsu, MMA, Kickboxing. Classes for all levels - from fundamentals to advanced. Sign up for a free trial." />
		
		<!-- Open Graph -->
		<meta property="og:title" content="Training - Southeast Jiu-Jitsu" />
		<meta property="og:description" content="Discover our complete training offering: Jiu-Jitsu, MMA, Kickboxing. Classes for all levels." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://southeastjj.pl/en/training" />
		
		<!-- Canonical -->
		<link rel="canonical" href="https://southeastjj.pl/en/training" />
		
		<!-- Alternate language -->
		<link rel="alternate" hreflang="pl" href="https://southeastjj.pl/treningi" />
		<link rel="alternate" hreflang="en" href="https://southeastjj.pl/en/training" />
	</head>
	<body class="bg-se">
		<Header currentLang="en" />
		
		<main class="relative min-h-screen">
			<!-- Hero Section -->
			<Hero 
				currentLang="en" 
				title={{
					pl: "TRENINGI",
					en: "TRAINING"
				}}
				subtitle={{
					pl: "Znajdź swój styl walki w naszej różnorodnej ofercie zajęć",
					en: "Find your fighting style in our diverse class offerings"
				}}
			/>
			
			<!-- Classes Grid Section -->
			<section class="py-16 md:py-20">
				<div class="container mx-auto px-4">
					<ClassesGrid classes={classes} locale="en" />
				</div>
			</section>
			
			<!-- CLA Section -->
			<CLASection currentLang="en" />
			
			<!-- Call to Action -->
			<section class="py-16 md:py-20">
				<CallToAction currentLang="en" />
			</section>
		</main>
		
		<Footer currentLang="en" />
	</body>
</html>